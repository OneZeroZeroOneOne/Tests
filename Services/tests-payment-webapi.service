[Unit]
Description=Tests.Payment.WebApi app

[Service]
WorkingDirectory=/root/Tests.Payment.WebApi.Builded/Tests.Payment.WebApi/bin/Release/netcoreapp3.1
ExecStart=/usr/bin/dotnet /root/Tests.Payment.WebApi.Builded/Tests.Payment.WebApi/bin/Release/netcoreapp3.1/Tests.Payment.WebApi.dll
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=SocialNetwork
User=root
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false

[Install]
WantedBy=multi-user.target