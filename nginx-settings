server {
    server_name   testpestovdemo.tk;
    client_max_body_size 100M;

    index index.html;
    root /var/www/applending/build;

    charset utf-8;
    #root    /var/www/socapp;
    #index   index.html index.htm;
    # add_header 'Access-Control-Allow-Origin' '*';
    # add_header 'Access-Control-Allow-Headers' '*';
    # add_header "Access-Control-Allow-Methods" '*';
    # Always serve index.html for any request

    location = / {
        try_files /index.html =404;
    }

    location = /bundle.css {
        try_files /bundle.css =404;
    }

    location /jsLanding/ {}
    location /public/ {}
    location /src/ {}

    location /quiz {
        alias /var/www/quiz/dist/;
        index index.html;
        try_files $uri $uri/ index.html =404;
    }

    location /admin {
        alias /var/www/socapp/dist/;
        index index.html;
        try_files $uri $uri/ index.html =404;
    }

    location / {
        rewrite ^/(.*) /admin$1 last;
    }

    location /api/authorization/ {
        proxy_pass         http://localhost:8000/;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection keep-alive;
        proxy_set_header   Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
	# proxy_hide_header 'Access-Control-Allow-Origin';
        if ($request_method = 'OPTIONS') {
           add_header 'Access-Control-Allow-Origin' '*';
           add_header 'Access-Control-Allow-Credentials' 'true';
           add_header 'Access-Control-Allow-Headers' '*';
           add_header 'Access-Control-Allow-Methods' 'GET,POST,OPTIONS,PUT,DELETE,PATCH';
           add_header 'Access-Control-Max-Age' 1728000;
           add_header 'Content-Type' 'text/plain charset=UTF-8';
           add_header 'Content-Length' 0;
           return 204;
        }
    }

    location /api/management/ {
        proxy_pass         http://localhost:8001/;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection keep-alive;
        proxy_set_header   Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        # proxy_hide_header 'Access-Control-Allow-Origin';
        if ($request_method = 'OPTIONS') {
           add_header 'Access-Control-Allow-Origin' '*';
           add_header 'Access-Control-Allow-Credentials' 'true';
           add_header 'Access-Control-Allow-Headers' '*';
           add_header 'Access-Control-Allow-Methods' 'GET,POST,OPTIONS,PUT,DELETE,PATCH';
           add_header 'Access-Control-Max-Age' 1728000;
           add_header 'Content-Type' 'text/plain charset=UTF-8';
           add_header 'Content-Length' 0;
           return 204;
        }
    }

    location /api/payments/ {
        proxy_pass         http://localhost:8002/;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection keep-alive;
        proxy_set_header   Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        # proxy_hide_header 'Access-Control-Allow-Origin';
        if ($request_method = 'OPTIONS') {
           add_header 'Access-Control-Allow-Origin' '*';
           add_header 'Access-Control-Allow-Credentials' 'true';
           add_header 'Access-Control-Allow-Headers' '*';
           add_header 'Access-Control-Allow-Methods' 'GET,POST,OPTIONS,PUT,DELETE,PATCH';
           add_header 'Access-Control-Max-Age' 1728000;
           add_header 'Content-Type' 'text/plain charset=UTF-8';
           add_header 'Content-Length' 0;
           return 204;
        }
    }


    location /api/questionanswer/ {
        proxy_pass         http://localhost:8003/;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection keep-alive;
        proxy_set_header   Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        # proxy_hide_header 'Access-Control-Allow-Origin';
        if ($request_method = 'OPTIONS') {
           add_header 'Access-Control-Allow-Origin' '*';
           add_header 'Access-Control-Allow-Credentials' 'true';
           add_header 'Access-Control-Allow-Headers' '*';
           add_header 'Access-Control-Allow-Methods' 'GET,POST,OPTIONS,PUT,DELETE,PATCH';
           add_header 'Access-Control-Max-Age' 1728000;
           add_header 'Content-Type' 'text/plain charset=UTF-8';
           add_header 'Content-Length' 0;
           return 204;
        }
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/testpestovdemo.tk/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/testpestovdemo.tk/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = testpestovdemo.tk) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen        80;
    server_name   testpestovdemo.tk;
    return 404; # managed by Certbot

    location /api/authorization/ {
        proxy_pass         http://localhost:8000/;
